@model List<RoleUserViewModel>

@{
    ViewData["Title"] = "RoleUser";
}

<h1>Role User</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleUser" method="post">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <input type="hidden" asp-for="@Model[i].UserID" />
                <input type="hidden" asp-for="@Model[i].RoleID" />
                <input type="checkbox" asp-for="@Model[i].IsSelected" />@Model[i].UserFullName<br />
            }
            <div class="form-group">
                <input type="submit" value="Add/Remove User" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListRole">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
